<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
 	<definition name="shopadmin" template="/WEB-INF/views/index.jsp">
		<put-attribute name="header" value="/WEB-INF/views/include/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="left" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" />
	</definition>

	<definition name="management/*" extends="shopadmin">
		<put-attribute name="body"  expression="/WEB-INF/views/management/{1}.jsp" />
		<put-attribute name="left"  expression="/WEB-INF/views/include/left.jsp" />
	</definition>
	<!--// main layout -->
	<definition name="mainTiles" template="/WEB-INF/views/index.jsp">
		<put-attribute name="header" value="/WEB-INF/views/include/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="left" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" />
	</definition>
	<!-- 기본 메인-->
	<definition name="index" extends="mainTiles">
		 <put-attribute name="body"  expression="/WEB-INF/views/include/main.jsp" />
		 <put-attribute name="left"  expression="/WEB-INF/views/include/none.jsp" />
	</definition>
	
	<!--// mobile layout -->
	<definition name="mobileTiles"  template="/WEB-INF/mobile/index.jsp">
		<put-attribute name="header" value="/WEB-INF/mobile/include/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="left" value="" />
		<put-attribute name="footer" value="/WEB-INF/mobile/include/footer.jsp" />
	</definition>
	<!-- 기본 메인-->
	<definition name="mobile" extends="mobileTiles">
		 <put-attribute name="body"  expression="/WEB-INF/mobile/include/main.jsp" />
		 <put-attribute name="left"  expression="/WEB-INF/mobile/include/left.jsp" />
	</definition>
	
	
	<definition name="mobile/*/*" extends="mobileTiles">
		<put-attribute name="body"  expression="/WEB-INF/mobile/{1}/{2}.jsp" />
		<put-attribute name="left"  expression="/WEB-INF/mobile/include/left.jsp" />
	</definition>
	<definition name="mobile/*" extends="mobileTiles" >
		<put-attribute name="body"  expression="/WEB-INF/mobile/{1}.jsp" />
		<put-attribute name="left"  expression="/WEB-INF/mobile/include/left.jsp" />
	</definition>
	
	<!-- 회원
	<definition name="user/*" extends="mainTiles">
		 <put-attribute name="body"  expression="/WEB-INF/views/user/user.jsp" />
	</definition>-->
	
	<!-- 가게
	<definition name="shop/*" extends="mainTiles">
		 <put-attribute name="body"  expression="/WEB-INF/views/shop/{1}.jsp" />
	</definition>-->
		
	<!-- 관리자
	<definition name="management/*" extends="mainTiles">
		 <put-attribute name="body"  expression="/WEB-INF/views/management/{1}.jsp" />
	</definition>-->
		
	<definition name="*/*" extends="mainTiles">
		<put-attribute name="body"  expression="/WEB-INF/views/{1}/{2}.jsp" />
		<put-attribute name="left"  expression="/WEB-INF/views/include/none.jsp" />
	</definition>
	<definition name="*" extends="mainTiles" >
		<put-attribute name="body"  expression="/WEB-INF/views/{1}.jsp" />
		<put-attribute name="left"  expression="/WEB-INF/views/include/none.jsp" />
	</definition>
	

	


	

</tiles-definitions>